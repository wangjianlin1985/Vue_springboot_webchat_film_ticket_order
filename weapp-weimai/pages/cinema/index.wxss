.container {
  background-color: #F2f2f2;
}

.item {
  padding: 10px;
  background-color: #fff;
  color: #787878;
  /* border-top: 1px solid #eaeaea; */
  border-bottom: 1px solid #f0f0f0;
}

.item_left {
  flex: 1;
  margin-left: 10px;
  padding-top: 5px;
  overflow: hidden;
}

.item_left .title {
  font-size: 16px;
  color: #333;
}
.item_left .sub_title {
  font-size: 14px;
  color: #666;
  margin: 2px 0px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

