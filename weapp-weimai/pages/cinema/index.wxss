.tag text {
  display: inline-block;
  border: 1px solid #589daf;
  color: #589daf;
  padding: 0 6rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 8rpx;
}

.item_right .price {
  font-size: 12px;
  color: #666;
}

.search {
  flex-grow: 1;
  height: 56rpx;
  font-size: 26rpx;
  color: #999;
  border: 1rpx solid #e6e6e6;
  border-radius: 10rpx;
  margin: 0 30rpx;
  background: #fff;
  line-height: 56rpx;
  text-align: center;
}

.topbar {
  position: fixed;
  width: 100vw;
  top: 0;
  height: 90rpx;
  border: none;
  background-color: #f5f5f5;
}

.nav-wrapper {
  position: fixed;
  z-index: 10;
  top: 90rpx;
  left: 0;
  width: 100vw;
  height: 80rpx;
  background: #fff;
}

.cinema-list {
  margin-top: 170rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
